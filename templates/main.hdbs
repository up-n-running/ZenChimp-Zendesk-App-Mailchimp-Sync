<div class="user_page">
		<div class="btn-group" data-toggle="buttons-radio" style="text-align: center">
		    <span>
				{{#if buttons.exclude.show}}<button class="btn exclude{{buttons.exclude.classNameInsert}}">Exclude</button>{{/if}}
				{{#if buttons.organization.show}}<button class="btn organization{{buttons.organization.classNameInsert}}">{{#if zendesk_user.organization.name}}{{zendesk_user.organization.name}}{{/if}}{{#unless zendesk_user.organization.name}}Organisation{{/unless}}</button>{{/if}}
				{{#if buttons.standard.show}}<button class="btn standard{{buttons.standard.classNameInsert}}">Standard</button>{{/if}}
			</span>
		</div>
	<div class="page_content"{{#if monkey_URL}} style="background-image: url('{{monkey_URL}}');"{{/if}}>
		{{#if display_params.customer_type_not_set}}
			<div class="information-text">
				<p class="warning">{{zendesk_user.name}} is not configured for Mailshots<br/>How should his/her emails be branded?</p>
			</div>
		{{/if}}
		{{#if display_params.customer_type_exclude}}
			<div class="information-text">
				<p class="inactive">{{zendesk_user.name}} is excluded from Mailshots</p>
			</div>
		{{/if}}
		{{#if display_params.customer_type_included}}
                    {{#if display_params.user_in_sync}}
			<div class="information-text">
				<p class="inactive">{{zendesk_user.name}} is in sync</p>
			</div>
                    {{/if}}
                    {{#unless display_params.user_in_sync}}
			<div class="information-text">
				<p class="warning">{{zendesk_user.name}} is in out of sync</p>
			</div>
                        <a class="btn btn-large sync_popup" data-toggle="modal" data-target="#sync_modal">Synchronize</a>
                    {{/unless}}
		{{/if}}
  </div>
</div>








<!-- modal_popup -->
<div id="sync_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 class="my_modal_label">Synchronize User</h3>
    </div>
    <div class="modal-body">
        <div class="user_sync_page">
            <div class="page_content">
                <table>
                <tr>
                    <td class="blank">&nbsp;</td>
                    <td class="zdheading">Zendesk User</td>
                    <td class="mcheading">Mailchimp User</td>
                </tr>
                <tr>
                    <td class="field_heading">Email Address</td>
                    <td class="zd value">{{zendesk_user.email}}</td>
                    <td class="mc value">{{mailchimp_user.email_address}}</td>
                </tr>          
                <tr>
                    <td class="field_heading">Name</td>
                    <td class="zd value">{{zendesk_user.name}}</td>
                    <td class="mc value">{{mailchimp_user.forename}} {{mailchimp_user.surname}}</td>
                </tr>
                <tr>
                    <td class="field_heading">Customer Type</td>
                    <td class="zd value">{{zendesk_user.customer_type}}</td>
                    <td class="mc value">{{mailchimp_user.customer_type}}</td>
                </tr>
                {{#each mailchimp_user.organization_fields}}
                <tr>
                    <td class="org field_heading">{{this.field_def.mailshot_field}}</td>
                    <td class="zd value">-</td>
                   <td class="mc value">{{this.value}}</td> 
                </tr>
                {{/each}}
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>